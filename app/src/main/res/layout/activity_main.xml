<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkOutMainActivity"
    android:background="@color/basil_ivory_50"
    >
    <TextView
        android:id="@+id/delete_today_workout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5sp"
        android:layout_marginRight="15sp"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_gravity="right"
        android:text="오늘 운동 기록 지우기"
        android:gravity="center"
        android:background="#C9FFF4"
        />
    <TextView
        android:id="@+id/title_name"
        android:layout_marginTop="25sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/delete_today_workout"
        android:text="운동 하즈아"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/basil_orange_800"
        />
    <LinearLayout
        android:layout_below="@id/title_name"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/basil_ivory_50"
        >

        <LinearLayout
            android:id="@+id/topTab"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="13sp"
            android:divider="@drawable/divider_for_horizontal"
            android:showDividers="middle"
            >
            <TextView
                android:id="@+id/toptab_1"
                style="@style/topTab"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/_light_green"
                android:text="@string/top_tab_1"/>
            <TextView
                android:id="@+id/toptab_2"
                style="@style/topTab"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/beige"
                android:text="@string/top_tab_2"/>
            <TextView
                android:id="@+id/toptab_3"
                style="@style/topTab"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/beige"
                android:text="@string/top_tab_3"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/today_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topTab"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            >
            <TableRow>
                <TextView
                    android:text="평균"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="총합"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:text="세트"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/avg"
                    android:text="0"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/sum"
                    android:text="0"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/count"
                    android:text="0"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:text="넣은 숫자"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/enter_number"
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >
                <TextView
                    android:id="@+id/add_10"
                    android:layout_marginEnd="5sp"
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="+10"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:background="@color/powder_blue"
                    />
                <TextView
                    android:id="@+id/add_5"
                    android:layout_marginEnd="5sp"
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="+5"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:background="@color/powder_blue"
                    />
                <TextView
                    android:id="@+id/add_1"
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="+1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:background="@color/powder_blue"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/add_btn"
                    android:layout_width="85sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="추가"
                    android:gravity="center"
                    android:layout_marginEnd="15sp"
                    android:background="@color/_light_green"
                    />

                <TextView
                    android:id="@+id/fix_btn"
                    android:layout_width="85sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:background="@drawable/rounded_red"
                    android:textColor="@color/white_smoke"
                    android:text="정정"/>

            </LinearLayout>

            <TextView
                android:id="@+id/log_btn"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20sp"
                android:text="전체 기록"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/white_smoke"
                android:background="#344955"
                />

        </LinearLayout>




    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottom_tab"
        android:name="com.example.workout.fragment.BottomTabFragment"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"

    />


</RelativeLayout>
