<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkOutMainActivity">

    <LinearLayout
        android:id="@+id/topTab"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/toptab_1"
            style="@style/topTab"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/_light_green"
            android:text="@string/top_tab_1"/>

        <TextView
            android:id="@+id/toptab_2"
            style="@style/topTab"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/beige"
            android:text="@string/top_tab_2"/>

        <TextView
            android:id="@+id/toptab_3"
            style="@style/topTab"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/beige"
            android:text="@string/top_tab_3"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/today_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topTab"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="30dp"
        >
        <TableRow>
            <TextView
                android:text="평균"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="1"
            />
            <TextView
                android:text="총합"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="1"
            />
            <TextView
                android:text="세트"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="1"
            />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/avg"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/sum"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/count"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="1"
                />
        </TableRow>
    </TableLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:layout_width="100sp"
                android:layout_height="30sp"
                android:text="넣은 숫자"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/enter_number"
                android:layout_width="100sp"
                android:layout_height="30sp"
                android:text="0"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >
            <TextView
                android:id="@+id/add_10"
                android:layout_marginEnd="5sp"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="+10"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@color/beige"
                />
            <TextView
                android:id="@+id/add_5"
                android:layout_marginEnd="5sp"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="+5"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@color/beige"
                />
            <TextView
                android:id="@+id/add_1"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="+1"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@color/beige"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/add_btn"
                android:layout_width="85sp"
                android:layout_height="45sp"
                android:textSize="30sp"
                android:text="추가"
                android:gravity="center"
                android:layout_marginEnd="15sp"
                android:background="@color/_light_green"
                />

            <TextView
                android:id="@+id/fix_btn"
                android:layout_width="85sp"
                android:layout_height="45sp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@color/beige"
                android:text="정정"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>