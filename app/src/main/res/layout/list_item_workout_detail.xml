<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/workout_date"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:text="Date"
        android:gravity="center"
        style="@style/detail_item_item"
    />

    <TextView
        android:id="@+id/workout_item_of_tap1"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:text="턱걸이 개수"
        android:gravity="center"
        style="@style/detail_item_item"
    />

    <TextView
        android:id="@+id/workout_item_of_tap2"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:text="푸시업 개수"
        android:gravity="center"
        style="@style/detail_item_item"
        />

    <TextView
        android:id="@+id/workout_item_of_tap3"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:text="달리기 개수"
        android:gravity="center"
        style="@style/detail_item_item"
        />

    <RelativeLayout
        android:layout_width="50sp"
        android:layout_height="50sp"
        >
        <ImageView
            android:id="@+id/workout_item_of_tap4"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:gravity="center"
            style="@style/detail_item_item"
            android:layout_gravity="center"/>
        <ImageView
            android:src="@drawable/trash_bin"
            android:layout_width="50sp"
            android:layout_height="38sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</LinearLayout>